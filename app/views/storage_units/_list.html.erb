<h1>Storage Units</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @storage_units.each do |storage_unit| %>
      <tr>
        <td><%= storage_unit.name %></td>
        <td><%= link_to 'Show', storage_unit %></td>
        <td><%= link_to 'Edit', edit_storage_unit_path(storage_unit) %></td>
        <td><%= link_to 'Destroy', storage_unit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>