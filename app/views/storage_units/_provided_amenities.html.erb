<div class="form-row">
    <h6><%= t(:facility_amenities) %>:</h6>
</div>

<% (Amenity::CATEGORY).each do |category| %>
  <div class="form-row">
    <div class="col-lg-12">
      <ul class="list-group">
        <% if storage_unit.amenities.category(category).present? %>
          <li class="list-group-item">
            <span style="font-size:14px"><%= category %><span><br>
            <% storage_unit.amenities.category(category).each do |amenity| %>
              <span style="font-size:12px">- <%= amenity.feature %></span><br>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>