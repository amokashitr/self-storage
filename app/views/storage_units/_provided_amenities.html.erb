<div class="form-row">
  <div class="col-lg-12">
    <label><h6>Facility Amenities:</h6></label>
  </div>
</div>

<% (Amenity::CATEGORY).each do |category| %>
  <div class="form-row">
    <div class="col-lg-12">
      <ul class="list-group">
        <% if storage_unit.amenities.category(category).present? %>
          <li class="list-group-item">
            <label><h6><%= category %></h6></label>
            <% storage_unit.amenities.category(category).each do |amenity| %>
              <h6><%= amenity.feature %></h6>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>