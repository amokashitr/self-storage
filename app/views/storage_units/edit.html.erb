<div class="container">
  <br><br><h1>Editing Storage Unit</h1>

  <%= form_for @storage_unit do |f| %>
    <%= render partial: 'form', locals: {f: f} %>

    <%= render partial: 'shared/remove_images', locals: { images: @storage_unit.images } %>

    <div class="form-row">
      <%= f.label :images %>&emsp;
      <%= f.file_field :images, multiple: true %><br><br><br>
    </div>

    <div class="row">
      <button type="submit" class="col-md-auto btn btn-primary pull-left ">Save</button><br>
    </div>
  <% end %>

</div>