<div class="container">
  <br><br><h1>Editing Unit</h1>

  <%= form_for [@storage_unit,@unit] do |f| %>
    <%= render partial: 'form', locals: {f: f} %>

    <%= render partial: 'shared/remove_images', locals: { images: @unit.images } %>

    <div class="form-row">
      <%= f.label :images %>&emsp;
      <%= f.file_field :images, multiple: true %><br><br><br>
    </div>

    <div class="form-row">
      <button type="submit" class="btn btn-primary">Save</button><br>
    </div><br><br>
  <% end %>

  <%= link_to 'Show', storage_unit_unit_path(storage_unit_id: @storage_unit.id, id: @unit.id) %> |
  <%= link_to 'Back', storage_unit_units_path(storage_unit_id: @storage_unit.id) %>
</div>