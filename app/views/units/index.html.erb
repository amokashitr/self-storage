<p id="notice"><%= notice %></p>

<h1>Units</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @units.each do |unit| %>
      <tr>
        <td><%= link_to 'Show', storage_unit_unit_path(storage_unit_id: @storage_unit.id, id: unit.id) %></td>
        <td><%= link_to 'Edit', edit_storage_unit_unit_path(storage_unit_id: @storage_unit.id, id: unit.id) %></td>
        <td><%= link_to 'Destroy', storage_unit_unit_path(storage_unit_id: @storage_unit.id, id: unit.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Unit', new_storage_unit_unit_path(storage_unit_id: @storage_unit.id) %>
